<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="k11.guildwars2eventviewer"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gw2_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".EventViewerApplication" >
        <activity
            android:name=".Activities.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SelectHomeWorld"
                  android:label="@string/selecthomeworld_title"
                  android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".Activities.SelectZone"
                  android:label="@string/selectzone_title">
        </activity>
        <activity android:name=".Activities.EventList"
                  android:label="@string/eventlist_title">
        </activity>
    </application>

</manifest>
